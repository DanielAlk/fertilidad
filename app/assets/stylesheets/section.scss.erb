section { padding-top: 30px; padding-bottom: 30px; }
section h2>.btn.pull-right { margin-top: 6px; }

/* TEAM */
section.team { height: 380px; }
section.team div.absolute { height: 328px; width: 100%; margin: 40px 0 0; }
section.team div.absolute>.relative{ height: 100%; width: 100%; top: 0; padding-top: calc(328px - 75px); background-color: rgba(0,0,0,0.5); background-clip: content-box; }
section.team h4 { margin: 18px 0 5px; }
section.team p { font-size: 0.7em; }

/* TWEET */
.tweet { font-size: 0.8em; }
.tweet img.avatar { color: inherit; border: 4px solid; border-radius: 50%; width: 115px; height: auto; margin-bottom: 20px; }
.tweet h4 { margin: 5px 0; }
.tweet h4+p { font-size: 1.1em; }
.tweet hr { margin: 12px 0; }

/* MAIN IMAGE */
.main-image { height: 600px; padding-top: 220px; }
.main-image p { max-width: 400px; margin-top: 20px; }

/* SPERMOGRAM */
.spermogram-picture { float: left; width: auto; height: 350px; margin-right: 30px; }

/* DOWNLOADS */
.downloads-title { padding-bottom: 15px; }
.downloads-title i { margin: 0 0 -13px; margin-right: 10px; }
.downloads-title span { margin-right: 25px; }