.icon.mime { background-image: url('<%= asset_path 'icons-mime-type.png' %>'); height: 55px; }
.icon.mime.image { background-position: 0 0; width: 56px; }
.icon.mime.document { background-position: -62px 0; width: 55px; }
.icon.mime.video { background-position: -122px 0; width: 50px; }
