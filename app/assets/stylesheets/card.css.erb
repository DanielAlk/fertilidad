.card { position: relative; background-color: #e7e9ee; padding-left: 90px; }
.card.fixed-200 { height: 200px; }
.card-band { position: absolute; left: 0; top: 0; width: 90px; height: 100%; text-align: center; background-color: #d9dbe0; }
.card.fixed-200 .card-band { line-height: 200px; }
.card-band i.icon { vertical-align: middle; }
.card:not(.fixed-200) .card-band i.icon { height: 100%; background-size: 172px; background-repeat: no-repeat; }
.card-body { position: relative; height: 100%; padding: 30px 25px;}
.card-body p { font-size: 0.8em; }
.card-body a.info { position: absolute; bottom: 30px; }
.card-body a.info img { height: 25px; width: auto; }
.card-body a.download { position: absolute; bottom: 0; right: 0; }
.card-body a.download img { height: 30px; width: auto; }
.card-body a.card-close { position: absolute; top: 0; right: 0; background-color: #3C3F44; color: #FDFDFD; display: inline-block; height: 25px; width: 25px; text-align: center; }
.card-body a.card-close .glyphicon { vertical-align: middle; }
.card-admin { position: absolute; top: 0; left: 0; padding: 3px 10px 1px; background-color: #D9DBE0; text-align: center; }