<div class="main-image bg-contact">
	<div class="container">
		<h2>CONTACTO</h2>
	</div>
</div>
<section class="bg-ash-dark">
	<div class="container">
		<h3>DEJANOS UN MENSAJE</h3>
		<div class="row space-NS-40">
			<div class="col-xs-6">
				<form>
					<div class="form-group">
						<input type="text" name="contact[name]" id="contact_name" class="form-control" placeholder="Nombre">
					</div>
					<div class="form-group">
						<input type="email" name="contact[email]" id="contact_email" class="form-control" placeholder="Email">
					</div>
					<div class="form-group space-S-30">
						<textarea class="form-control" name="contact[message]" id="contact_message" placeholder="Mensaje" rows="10"></textarea>
					</div>
					<button type="submit" class="btn btn-default btn-block">ENVIAR</button>
				</form>
			</div>
			<div class="col-xs-5">
				<%= image_tag 'map.jpg', class: 'cover' %>
			</div>
		</div>
	</div>
</section>