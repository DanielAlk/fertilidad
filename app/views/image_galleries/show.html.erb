<div class="main-image bg-images">
  <div class="container">
    <h2>IMAGENES</h2>
  </div>
</div>
<section>
  <div class="container">
  	<%= form_for @image_gallery do |f| %>
	  	<div class="row tight-10 space-NS-40 organize-S-20">
		  	<% @image_gallery.image_gallery_items.each do |item| %>
			  	<div class="col-xs-3">
			  		<%= text_field_tag 'item[titles][]', item.title, class: 'form-control' %>
			  		<%= image_tag item.image.url(:thumb), class: 'cover' %>
			  		<%= text_field_tag 'item[texts][]', item.title, class: 'form-control' %>
			  	</div>
		  	<% end %>
	  	</div>
	  	<%= f.submit %>
  	<% end %>
  </div>
</section>