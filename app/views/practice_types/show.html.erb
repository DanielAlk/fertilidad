<h1>
	<%= @practice_type.title %>
	<small><%= link_to 'Edit', edit_practice_type_path(@practice_type) %> |
	<%= link_to 'Back', practice_types_path %></small>
</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @practice_type.practices.each do |practice| %>
      <tr>
        <td><%= practice.title %></td>
        <td><%= link_to 'Edit', edit_practice_path(practice) %></td>
        <td><%= link_to 'Destroy', practice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

